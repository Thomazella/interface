{
  "workbench.colorCustomizations": {
    "[Community Material Theme Darker]": {
      "editor.background": "#121211",
      "activityBar.background": "#121211",
      "statusBar.background": "#121211",
      "panel.background": "#121211",
      "sideBar.background": "#121211",
      "activityBarBadge.background": "#121211",
      "badge.background": "#121211",
      "editorPane.background": "#121211",
      "editorWidget.background": "#121211",
      "tab.activeBackground": "#121211",
      "tab.inactiveBackground": "#121211",
      "titleBar.activeBackground": "#121211",
      "editorGutter.background": "#121211"
    }
  },
  // "materialTheme.cache.workbench.settings": {
  //     "accent": "Orange",
  //     "accentPrevious": "Breaking Bad"
  // },
  "workbench.iconTheme": "eq-material-theme-icons-palenight",
  "editor.tokenColorCustomizations": {
    "[Community Material Theme Darker]": {
      // "comments": "#474747",
      // "functions": "#91418e",
      "strings": "#627c63",
      "variables": "#96be98",
      // "keywords": "#c5ad97",
      // "types": "#a97457",
      // "numbers": "#FF0000"
    }
  },
  //
  // - - - - - - - - MACROS  - - - - - - - - -
  //
  "macros": {
    "commentDown": [
      "editor.action.copyLinesDownAction",
      "editor.action.commentLine"
    ],
    "trueCtrlK": ["cursorEndSelect", "editor.action.clipboardCutAction"],
    "findAndReplace": [
      "actions.find",
      "editor.action.startFindReplaceAction",
      "actions.find"
    ]
  },
  //
  // - - - - - - - - FONT - - - - - - - - -
  //
  "markdown.preview.fontSize": 12,
  "editor.fontLigatures": true,
  "terminal.integrated.fontWeightBold": "300",
  "terminal.integrated.fontFamily": "Furacode nerd font",
  "terminal.integrated.lineHeight": 1.35,
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.splitCwd": "inherited",
  // = = = = = = = = PragmataPro = = = = = = = =
  "editor.fontFamily": "PragmataPro",
  "editor.fontWeight": "normal",
  "editor.lineHeight": 25,
  "editor.fontSize": 14.5,
  //
  // - - - - - - - - FORMATTER & LINTER - - - - - - - - -
  //
  "eslint.packageManager": "yarn",
  "eslint.run": "onType",
  "eslint.alwaysShowStatus": true,
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  //
  // - - - - - - - - Python - - - - - - - - -
  //
  "python.formatting.autopep8Args": ["-a", "-a", "-a"],
  "python.pythonPath": "python3",
  "python.linting.enabled": true,
  "python.formatting.provider": "autopep8",
  //
  // - - - - - - - - GIT - - - - - - - - -
  //
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.untrackedChanges": "separate",
  //
  // - - - - - - - - BASH - - - - - - - - -
  //
  "shellformat.path": "/usr/local/bin/shfmt",
  "shellformat.flag": "-i 2 -ln bash",
  "shellcheck.customArgs": ["-x"],
  //
  // - - - - - - - - JS - - - - - - - - -
  //
  "javascript.validate.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  // "javascript.referencesCodeLens.enabled": true,
  //
  // - - - - - - - - TS - - - - - - - - -
  //
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  //
  // - - - - - - - - TERMINAL - - - - - - - - -
  //
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.external.osxExec": "iTerm2.app",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.env.osx": {
    "VSCODE_OVERRIDES": "/Users/vamac/.vscode_overrides"
  },
  //
  // - - - - - - - - GENERAL - - - - - - - - -
  //
  "colorize.include": [".js", ".jsx"],
  "colorize.languages": [
    "css",
    "sass",
    "scss",
    "less",
    "postcss",
    "sss",
    "stylus",
    "xml",
    "svg",
    "javascript",
    "html"
  ],
  "workbench.activityBar.visible": false,
  "workbench.settings.editor": "json",
  "workbench.statusBar.visible": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.wordBasedSuggestions": true,
  "editor.formatOnSave": true,
  "editor.renderControlCharacters": true,
  "editor.minimap.enabled": false,
  "editor.formatOnType": false,
  "editor.snippetSuggestions": "top",
  "editor.suggest.localityBonus": true,
  "editor.tabCompletion": "on",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorSurroundingLines": 5,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1500,
  "files.trimTrailingWhitespace": true,
  "files.hotExit": "onExitAndWindowClose",
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",
  "window.zoomLevel": -1,
  "debug.allowBreakpointsEverywhere": true,
  "atomKeymap.promptV3Features": true,
  "emmet.showAbbreviationSuggestions": false,
  "colorHelper.pickerForm": "compact",
  "explorer.confirmDragAndDrop": false,
  "java.configuration.checkProjectSettingsExclusions": false,
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.configuration.updateBuildConfiguration": "automatic",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "githubPullRequests.showInSCM": true,
  "workbench.list.automaticKeyboardNavigation": false,
  "merge-conflict.diffViewPosition": "Below",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "timeline.excludeSources": [],
  "workbench.editor.enablePreview": true,
  "workbench.editor.showTabs": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorTheme": "Community Material Theme Darker",
  "explorer.confirmDelete": false
}
