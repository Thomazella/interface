{
  //
  // - - - - - - - - THEME - - - - - - - - -
  //
  "workbench.colorTheme": "Material Theme Darker High Contrast",
  "workbench.colorCustomizations": {
    "[Shuriken]": {
      "editor.background": "#141318",
      "activityBar.background": "#141318",
      "statusBar.background": "#141318",
      "panel.background": "#141318",
      "sideBar.background": "#141318",
      "activityBarBadge.background": "#141318",
      "badge.background": "#141318",
      "editorPane.background": "#141318",
      "editorWidget.background": "#141318",
      "tab.activeBackground": "#141318",
      "tab.inactiveBackground": "#141318",
      "titleBar.activeBackground": "#141318",
      "editorGutter.background": "#141318"
    },
    "activityBarBadge.background": "#FF4081",
    "list.activeSelectionForeground": "#FF4081",
    "list.inactiveSelectionForeground": "#FF4081",
    "list.highlightForeground": "#FF4081",
    "scrollbarSlider.activeBackground": "#FF408150",
    "editorSuggestWidget.highlightForeground": "#FF4081",
    "textLink.foreground": "#FF4081",
    "progressBar.background": "#FF4081",
    "pickerGroup.foreground": "#FF4081",
    "tab.activeBorder": "#FF4081",
    "notificationLink.foreground": "#FF4081",
    "editorWidget.resizeBorder": "#FF4081",
    "editorWidget.border": "#FF4081",
    "settings.modifiedItemIndicator": "#FF4081",
    "settings.headerForeground": "#FF4081",
    "panelTitle.activeBorder": "#FF4081",
    "breadcrumb.activeSelectionForeground": "#FF4081",
    "menu.selectionForeground": "#FF4081",
    "menubar.selectionForeground": "#FF4081"
  },
  // "materialTheme.cache.workbench.settings": {
  //     "accent": "Orange",
  //     "accentPrevious": "Breaking Bad"
  // },
  "workbench.iconTheme": "eq-material-theme-icons-ocean",
  "editor.tokenColorCustomizations": {
    "[Material Theme Darker High Contrast]": {
      "comments": "#474747",
      "functions": "#7576be",
      // "functions": "#c8ca6e",
      "strings": "#6b705f",
      // "strings": "#7c8169",
      // "types": "#8c8d50",
      // "variables": "#b3b3b3",
      "keywords": "#c5ad97",
      // "keywords": "#cc7474",
      // "comments": "#444444",
      // "functions": "#6472b1",
      // "strings": "#868064",
      "types": "#6abe7f"
      // "variables": "#dabfe7",
      // "keywords": "#9774cc",
    }
  },
  //
  // - - - - - - - - MACROS  - - - - - - - - -
  //
  "macros": {
    "commentDown": [
      "editor.action.copyLinesDownAction",
      "editor.action.commentLine"
    ],
    "trueCtrlK": [
      "cursorEndSelect",
      "editor.action.clipboardCutAction"
    ],
    "findAndReplace": [
      "actions.find",
      "editor.action.startFindReplaceAction",
      "actions.find"
    ]
  },
  //
  // - - - - - - - - FONT - - - - - - - - -
  //
  "markdown.preview.fontSize": 12,
  "editor.fontLigatures": true,
  "terminal.integrated.fontWeightBold": "300",
  "terminal.integrated.fontFamily": "Furacode nerd font",
  "terminal.integrated.lineHeight": 1.35,
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.splitCwd": "inherited",
  // = = = = = = = = PragmataPro = = = = = = = =
  "editor.fontFamily": "PragmataPro",
  "editor.fontWeight": "normal",
  "editor.lineHeight": 25,
  "editor.fontSize": 14.5,
  //
  // - - - - - - - - FORMATTER & LINTER - - - - - - - - -
  //
  "prettier-eslint.eslintIntegration": false,
  "eslint.packageManager": "yarn",
  "eslint.run": "onType",
  "eslint.alwaysShowStatus": true,
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact"
  ],
  //
  // - - - - - - - - Python - - - - - - - - -
  //
  "python.formatting.autopep8Args": [
    "-a",
    "-a",
    "-a"
  ],
  "python.pythonPath": "python3",
  "python.linting.enabled": true,
  "python.formatting.provider": "autopep8",
  //
  // - - - - - - - - GIT - - - - - - - - -
  //
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.untrackedChanges": "separate",
  //
  // - - - - - - - - BASH - - - - - - - - -
  //
  "shellformat.path": "/usr/local/bin/shfmt",
  "shellformat.flag": "-i 2 -ln bash",
  "shellcheck.customArgs": [
    "-x"
  ],
  //
  // - - - - - - - - JS - - - - - - - - -
  //
  "javascript.validate.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  // "javascript.referencesCodeLens.enabled": true,
  //
  // - - - - - - - - TS - - - - - - - - -
  //
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  //
  // - - - - - - - - TERMINAL - - - - - - - - -
  //
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.external.osxExec": "iTerm2.app",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.env.osx": {
    "VSCODE_OVERRIDES": "/Users/vamac/.vscode_overrides"
  },
  //
  // - - - - - - - - GENERAL - - - - - - - - -
  //
  "colorize.include": [
    ".js",
    ".jsx"
  ],
  "colorize.languages": [
    "css",
    "sass",
    "scss",
    "less",
    "postcss",
    "sss",
    "stylus",
    "xml",
    "svg",
    "javascript",
    "html"
  ],
  "workbench.activityBar.visible": false,
  "workbench.settings.editor": "json",
  "workbench.statusBar.visible": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.wordBasedSuggestions": true,
  "editor.formatOnSave": true,
  "editor.renderControlCharacters": true,
  "editor.minimap.enabled": false,
  "editor.formatOnType": false,
  "editor.snippetSuggestions": "top",
  "editor.suggest.localityBonus": true,
  "editor.tabCompletion": "on",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorSurroundingLines": 5,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1500,
  "files.trimTrailingWhitespace": true,
  "files.hotExit": "onExitAndWindowClose",
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",
  "window.zoomLevel": -1,
  "debug.allowBreakpointsEverywhere": true,
  "atomKeymap.promptV3Features": true,
  "emmet.showAbbreviationSuggestions": false,
  "colorHelper.pickerForm": "compact",
  "explorer.confirmDragAndDrop": false,
  "materialTheme.accent": "Pink",
  "java.configuration.checkProjectSettingsExclusions": false,
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.configuration.updateBuildConfiguration": "automatic",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "githubPullRequests.showInSCM": true,
  "workbench.list.automaticKeyboardNavigation": false,
  "merge-conflict.diffViewPosition": "Below",
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "explorer.confirmDelete": false,
}