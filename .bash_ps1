#! /usr/bin/env bash
purp="\[\e[34m\]"
pink="\[\e[35m\]"
lblack="\[\e[90m\]"
black="\[\e[30m\]"
end="\[\e[0m\]"
under="\[\e[4m\]"
bold="\[\e[1m\]"

#unsetting avoids glitches
unset decorations
if [ $(whoami) != "root" ]; then
  case $(($RANDOM % 7)) in
    0)
      #The spaces avoids emoji collapsing on themselves. MacOS glitch.
      decorations="🐺 🌋"'  '
    ;;
    1)
      decorations="🌸 🌿"'  '
    ;;
    2)
      decorations="🚀 💫"'  '
    ;;
    3)
      decorations="🍁 🍷"'  '
    ;;
    4)
      decorations="🔮 🦋"'  '
    ;;
    5)
      decorations="🌄 🎆"'  '
    ;;
    6)
      decorations="🍇 🥓"'  '
    ;;
  esac
  colorMain=$purp
  colorMeh=$lblack
else
  colorMain=$pink
  colorMeh=$black
  colorText=$pink
  decorations="💠 💠"'  '
fi

blankLine="$colorMain$under\011\011$end\n" #octal for \t = \011
workdir="$colorMain\w $end"
hist="$colorMeh!\! $end"
tim="$colorMeh\@ $end"
S="$colorMain\\$ $end$colorText"
export PS1="${blankLine}${hist}${workdir}${tim}\n${decorations}"
