#! /bin/bash
#custom user color for prompt
export TMZLCOLOR="\e[0;49;34m"
function ttyemoji () {
  case $(($RANDOM % 7)) in
    #The space avoids emoji collapsing on themselves
    0)
      decorations="🐺 🌋"
    ;;
    1)
      decorations="🌸 🌿"
    ;;
    2)
      decorations="🌗 🖤"
    ;;
    3)
      decorations="🍁 🍷"
    ;;
    4)
      decorations="🔮 🦋"
    ;;
    5)
      decorations="🥕 🍫"
    ;;
    6)
      decorations="❣️ 💕"
    ;;
  esac
}
function rootemoji () {
  #Bold, similar to default fg on all text
  decorations="\e[1;49;37m""💠 💠"
}
#unsetting avoids glitches
unset decorations
if [ $(whoami) != "root" ]; then
  ttyemoji
  decorations=$TMZLCOLOR$decorations
  export PS1="$(echo $decorations)  \W \e[0m$(echo -n "$") "
else
  rootemoji
  #This echo call gets rid of empty D's, otherwise they show up as spaces
  export PS1="$(echo $decorations)  \W $(echo -n "#") "
fi
